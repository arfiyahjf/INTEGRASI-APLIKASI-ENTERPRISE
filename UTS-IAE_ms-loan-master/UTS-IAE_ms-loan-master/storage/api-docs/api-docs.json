{
    "openapi": "3.0.0",
    "info": {
        "title": "Loan API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/loan/create": {
            "post": {
                "tags": [
                    "Loan"
                ],
                "summary": "Create a new loan (borrow book)",
                "operationId": "2c256a3908bef59abae2b83df15ebea9",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "user_id",
                                    "book_id",
                                    "borrowed_at",
                                    "due_date",
                                    "status"
                                ],
                                "properties": {
                                    "user_id": {
                                        "type": "string"
                                    },
                                    "book_id": {
                                        "type": "string"
                                    },
                                    "borrowed_at": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "due_date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "borrowed",
                                            "returned"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Loan created successfully"
                    },
                    "400": {
                        "description": "Invalid book ID"
                    },
                    "422": {
                        "description": "Validation failed"
                    }
                }
            }
        },
        "/api/loans/return/{id}": {
            "post": {
                "tags": [
                    "Loan"
                ],
                "summary": "Return a borrowed book",
                "operationId": "d2b4592a0a5fa85fd58da5b2aec39a81",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Book returned successfully"
                    },
                    "400": {
                        "description": "Book already returned or not borrowed"
                    },
                    "404": {
                        "description": "Loan not found"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Loan",
            "description": "Loan"
        }
    ]
}